{
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(poetry install:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(python3:*)",
      "Bash(export PATH=\"/Users/anthonygore/.local/bin:$PATH\")",
      "Bash(poetry --version:*)",
      "Bash(poetry run python:*)",
      "Bash(tmux -V:*)",
      "Bash(brew install:*)",
      "Bash(./scripts/setup.sh:*)",
      "Bash(tmux show-options:*)",
      "Bash(tmux list-keys:*)",
      "Bash(cat:*)",
      "Bash(tmux kill-session:*)",
      "Bash(poetry run ai-arcade:*)",
      "Bash(tmux capture-pane:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(echo:*)",
      "Bash(test:*)",
      "WebSearch",
      "WebFetch(domain:www.analyticsvidhya.com)",
      "WebFetch(domain:medium.com)",
      "WebFetch(domain:codefinity.com)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"state\":\"processing\",\"timestamp\":'$(date +%s)'}' > /tmp/claude_arcade_state.json"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"state\":\"idle\",\"timestamp\":'$(date +%s)'}' > /tmp/claude_arcade_state.json"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"state\":\"processing\",\"timestamp\":'$(date +%s)'}' > /tmp/claude_arcade_state.json"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"state\":\"idle\",\"timestamp\":'$(date +%s)'}' > /tmp/claude_arcade_state.json"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"state\":\"idle\",\"timestamp\":'$(date +%s)'}' > /tmp/claude_arcade_state.json"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"state\":\"processing\",\"timestamp\":'$(date +%s)'}' > /tmp/claude_arcade_state.json"
          }
        ]
      }
    ]
  }
}
